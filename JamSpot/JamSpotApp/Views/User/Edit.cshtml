@using JamSpotApp.Models.User
@model EditUserViewModel

<div class="container mt-4">
    <h2>Edit User</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="UserName" class="control-label">User Name</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserBio" class="control-label">Bio</label>
            <textarea asp-for="UserBio" class="form-control"></textarea>
            <span asp-validation-for="UserBio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Instrument" class="control-label">Instrument</label>
            <input asp-for="Instrument" class="form-control" />
            <span asp-validation-for="Instrument" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Current Profile Picture</label><br />
            @if (!string.IsNullOrEmpty(Model.ExistingPicturePath))
            {
                <img src="@Model.ExistingPicturePath" class="img-thumbnail mb-3" alt="Current ProfilePicture" width="150" />
            }
        </div>

        <div class="form-group">
            <label asp-for="ProfilePicture" class="control-label">Upload New Profile Picture</label>
            <input asp-for="ProfilePicture" type="file" class="form-control-file" />
            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
        @if (Model != null)
        {
            <a asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mt-3">Delete</a>
        }
    </form>
</div>
