@model JamSpotApp.Models.Event.DeleteEventViewModel
<link rel="stylesheet" href="~/css/Event.css" asp-append-version="true" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="Event-container">
@if (Model != null)
{
            <h2 class="mt-2">Are you sure you want to delete this event?</h2>

    <div>
        <h4>@Model.EventName</h4>
        <p>Organizer: @Model.Organizer</p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="All" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
}
else
{
    <p>Event not found.</p>
}
    </div>
</div>