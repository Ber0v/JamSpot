@model JamSpotApp.Models.Event.DeleteEventViewModel

<link rel="stylesheet" href="~/css/Event.css" asp-append-version="true" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="Event-container p-4 shadow">
        <h2 class="mt-4 text-center text-danger">Delete Event</h2>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <h4>@Model.EventName</h4>
                <p>Organizer: @Model.Organizer</p>
            </div>
            <div>
                <button type="submit" class="btn btn-outline-danger">Yes, Delete</button>
                <a asp-action="All" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
