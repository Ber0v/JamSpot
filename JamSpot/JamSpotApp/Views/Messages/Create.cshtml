@model JamSpotApp.Models.Message.CreateMessageViewModel

<link rel="stylesheet" href="~/css/CreateMessage.css" asp-append-version="true" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="message-container">
        <h2>Create a Message</h2>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="content" class="form-label">Content:</label>
                <textarea id="content" name="Content" required class="form-control">@Model.Content</textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-outline-primary mt-2">Send</button>
        </form>
    </div>
</div>
