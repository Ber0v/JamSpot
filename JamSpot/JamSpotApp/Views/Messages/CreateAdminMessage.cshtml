@model JamSpotApp.Models.Message.CreateMessageViewModel

<link rel="stylesheet" href="~/css/CreateMessage.css" asp-append-version="true" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="message-container">
        <h2>Create an Admin Message</h2>
        <form asp-action="CreateAdminMessage" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" id="title" name="Title" class="form-control" value="@Model.Title" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="content" class="form-label">Content:</label>
                <textarea id="content" name="Content" class="form-control" rows="5" required>@Model.Content</textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-outline-primary mt-3">Create</button>
        </form>
    </div>
</div>
