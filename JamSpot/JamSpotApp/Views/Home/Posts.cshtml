@using JamSpotApp.Models.feed
@model IEnumerable<FeedViewModel>

    @if (Model == null || !Model.Any())
    {
        <p class="text-center">No posts yet.</p>
    }
    else
    {
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var e in Model)
        {
            <div class="col">
                <div class="card rounded-4 custom-navbar">
                    <div class="card-header bg-dark text-white rounded-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="card-title mt-1 mb-1">@e.Publisher</h4>
                                <div class="mt-2">
                                    <span class="badge bg-success">@e.Instrument</span>
                                </div>
                            </div>
                            <img src="@e.Image" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;" alt="Image">
                        </div>
                    </div>

                    <div class="card-body">
                        <h4 class="card-title mt-0">@e.Title</h4>
                        <p class="card-text">@e.Content</p>
                    </div>

                    <div class="card-footer border-secondary">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <p class="mb-2"><span class="fw-bold">Published: </span>@e.CreatedDate</p>
                            <div class="d-flex flex-wrap justify-content-end">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a asp-controller="Feed" asp-action="UserDetails" asp-route-id="@e.PublisherId" class="btn btn-warning btn-sm mb-2 fw-bold rounded btn-dark-text">Details</a>
                                }
                                else
                                {
                                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-warning btn-sm mb-2 fw-bold rounded btn-dark-text">Details</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    }