@model JamSpotApp.Models.CreateGroupViewModel

<div class="container mt-4">
    <h2>Edit Group</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="GroupName" class="control-label">Group Name</label>
            <input asp-for="GroupName" class="form-control" />
            <span asp-validation-for="GroupName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre" class="control-label">Genre</label>
            <input asp-for="Genre" class="form-control" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Current Logo</label><br />
            @if (!string.IsNullOrEmpty(Model.ExistingLogoPath))
            {
                <img src="@Model.ExistingLogoPath" class="img-thumbnail mb-3" alt="Current Logo" width="150" />
            }
        </div>

        <div class="form-group">
            <label asp-for="Logo" class="control-label">Upload New Logo</label>
            <input asp-for="Logo" type="file" class="form-control-file" />
            <span asp-validation-for="Logo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    </form>
</div>
