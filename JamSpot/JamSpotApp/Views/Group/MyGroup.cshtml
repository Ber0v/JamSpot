@model JamSpotApp.Models.GroupDetailsViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Logo" class="img-fluid rounded-circle" alt="Group Logo" />
        </div>
        <div class="col-md-8">
            <h2>@Model.GroupName</h2>
            <p><strong>Genre:</strong> @Model.Genre</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Creator:</strong> @Model.Creator</p>

            @if (Model.IsOwner)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Group</a>
            }
        </div>
    </div>
</div>
