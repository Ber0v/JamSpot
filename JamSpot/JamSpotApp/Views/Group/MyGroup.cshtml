@model GroupDetailsViewModel

<div class="container mt-4">
    <h2>@Model.GroupName</h2>
    <p><strong>Genre:</strong> @Model.Genre</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Created by:</strong> @Model.Creator</p>

    <h3>Group Members</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Instrument</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model.Members)
            {
                <tr>
                    <td>@member.UserName</td>
                    <td>@member.Instrument</td>
                    <td>
                        @if (Model.IsOwner)
                        {
                            <form asp-action="RemoveMusician" method="post">
                                <input type="hidden" name="groupId" value="@Model.Id" />
                                <input type="hidden" name="musicianId" value="@member.Id" />
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.IsOwner)
    {
        <a asp-action="AddMusician" asp-route-groupId="@Model.Id" class="btn btn-primary">Add Musicians</a>
    }
</div>
