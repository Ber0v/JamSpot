@using JamSpotApp.Models.Group
@model GroupDetailsViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <!-- Profile Picture -->
            <div class="d-flex justify-content-center">
                <img src="@Model.Logo" alt="Profile Picture" class="rounded-circle border border-secondary" style="width: 120px; height: 120px;">
            </div>

            <!-- Username -->
            <h3 class="mt-3">@Model.GroupName</h3>

            <!-- Bio -->
            <p class="text-muted">@Model.Description</p>

            <!-- Instrument -->
            <p><strong>Instrument:</strong>@Model.Genre</p>

            <!-- Follow Counts and Edit Button -->
            <div class="d-flex justify-content-center align-items-center mt-3">
                <button class="btn btn-outline-light ms-4">Edit Profile</button>
            </div>

            <!-- Tabs for Posts, Saved, and Tagged -->
            <ul class="nav nav-tabs mt-4 justify-content-center border-bottom border-secondary">
            </ul>

            <!-- Placeholder for Posts -->
            <div class="text-center mt-5">
                <p class="text-muted">Share music when you want to show them on your profile.</p>
            </div>
        </div>
    </div>
</div>
