@using JamSpotApp.Models.Group
@model IEnumerable<GroupViewModel>

@if (!(bool)ViewBag.UserHasGroup)
{
    <a asp-action="CreateGroup" class="btn btn-primary float-end rounded-pill">Create Group</a>
}

<h2 class="mt-3 text-center">All Groups</h2>
<hr />
<div class="container">
    <div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 g-4">
        @foreach (var group in Model)
        {
            <div class="col">
                <div class="card rounded-5 custom-navbar" style="width: 200px">
                    <div class="card-header bg-gradient rounded-5">
                        <div class="d-flex justify-content-center">
                            <img src="@group.Logo" class="card-img-top rounded-5" style="width: 190px; height: 190px; object-fit: cover;" alt="Group Logo" />
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-center">@group.GroupName</h5>
                        <div class="d-flex justify-content-center mb-3">
                            <span class="badge bg-secondary">@group.Genre</span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a asp-controller="Group" asp-action="Details" asp-route-id="@group.Id" class="btn btn-primary">View Group</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
