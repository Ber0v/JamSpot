<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Вашите CSS файлове -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JamSpotApp.styles.css" asp-append-version="true" />

    <style>
        /* Стил за навбара */
        body {
            background-color: #2b2b2b; /* Фон */
            color: #ffffff;
        }

        /* Цвят на навбара */
        .custom-navbar {
            background-color: #3c3c3c;
            color: #ffffff;
        }

        /* Допълнителни стилове за иконите */
        .navbar-nav .nav-item .nav-link {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    </style>
</head>
<body class="text-light">
    <header>
        <nav class="navbar navbar-expand-sm custom-navbar navbar-dark">
            <div class="container-fluid">
                <h1 class="navbar-brand">JamSpot</h1>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Навигационен бар -->
                <div class="collapse navbar-collapse justify-content-center" id="collapsibleNavbar">
                    <ul class="navbar-nav ">
                        <li class="nav-item me-3 me-lg-1">
                            <a class="nav-link float-start" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home fa-lg"></i>
                                <span class="ms-1">Home</span>
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item me-3 me-lg-1">
                            <a class="nav-link float-start" asp-controller="Feed" asp-action="All">
                                <i class="fas fa-signs-post fa-lg"></i>
                                <span class="ms-1">Feed</span>
                            </a>
                        </li>
                        <li class="nav-item me-3 me-lg-1">
                            <a class="nav-link float-start" asp-controller="Group" asp-action="All">
                                <i class="fas fa-users fa-lg"></i>
                                <span class="ms-1">Groups</span>
                            </a>
                        </li>
                        <li class="nav-item me-3 me-lg-1">
                            <a class="nav-link float-start" asp-controller="Event" asp-action="All">
                                <i class="fas fa-calendar-day fa-lg"></i>
                                <span class="ms-1">Events</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <ul class="navbar-nav">
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

        <div>
            <a class="nav-link float-start" asp-controller="Messages" asp-action="Create">
                <i class="fas fa-calendar-day fa-lg"></i>
                <span class="ms-1">Message</span>
            </a>
        </div>

        <div class="container text-center">
            &copy; @DateTime.Now.Year - JamSpot
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
