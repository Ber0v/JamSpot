@model JamSpotApp.Models.feed.FeedPageViewModel

<a asp-action="CreatePost" class="btn btn-outline-primary float-end rounded-pill">Add Post</a>
<h2 class="mt-3 text-center">All Posts</h2>
<hr />

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var e in Model.Posts)
        {
            <div class="col">
                <div class="card rounded-4 custom-navbar">
                    <div class="card-header bg-dark text-white rounded-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="card-title mt-1 mb-1">@e.Publisher</h4>
                                @if (!string.IsNullOrEmpty(e.Instrument))
                                {
                                    <div class="mt-2">
                                        <span class="badge bg-success">@e.Instrument</span>
                                    </div>
                                }
                            </div>
                            @if (!string.IsNullOrEmpty(e.Image))
                            {
                                <img src="@e.Image" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;" alt="Image">
                            }
                        </div>
                    </div>

                    <div class="card-body">
                        <h4 class="card-title mt-0">@e.Title</h4>
                        <p class="card-text">@e.Content</p>
                    </div>

                    <div class="card-footer border-secondary">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <p class="mb-2"><span class="fw-bold">Published: </span>@e.CreatedDate</p>
                            <div class="d-flex flex-wrap justify-content-end">
                                @if (e.CanEdit)
                                {
                                    <a asp-controller="Feed" asp-action="Delete" asp-route-id="@e.Id" class="btn btn-outline-danger btn-sm me-2 mb-2 fw-bold">Delete</a>
                                    <a asp-controller="Feed" asp-action="Edit" asp-route-id="@e.Id" class="btn btn-outline-warning btn-sm me-2 mb-2 fw-bold rounded btn-dark-text">Edit</a>
                                }

                                @if (e.IsGroupPost)
                                {
                                    <a asp-controller="Group" asp-action="Details" asp-route-id="@e.PublisherId" class="btn btn-outline-warning btn-sm mb-2 fw-bold rounded btn-dark-text">Details</a>
                                }
                                else
                                {
                                    <a asp-controller="User" asp-action="All" asp-route-id="@e.PublisherId" class="btn btn-outline-warning btn-sm mb-2 fw-bold rounded btn-dark-text">Details</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (Model.TotalPages > 1)
    {
        <!-- Контроли за пагинация -->
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="btn btn-outline-primary" asp-action="All" asp-route-pageNumber="@(Model.CurrentPage - 1)" aria-label="Previous">
                            Previous
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="btn btn-outline-primary">Previous</span>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <span class="btn btn-primary">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="btn btn-outline-primary" asp-action="All" asp-route-pageNumber="@i">@i</a>
                        </li>
                    }
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="btn btn-outline-primary" asp-action="All" asp-route-pageNumber="@(Model.CurrentPage + 1)" aria-label="Next">
                            Next
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="btn btn-outline-primary">Next</span>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
