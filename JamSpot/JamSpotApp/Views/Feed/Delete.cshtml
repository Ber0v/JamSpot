@model JamSpotApp.Models.feed.DeleteViewModel

<link rel="stylesheet" href="~/css/Feed.css" asp-append-version="true" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="Feed-container p-4 shadow">
        <h2 class="mb-4 text-center text-danger">Delete Post</h2>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <h4>@Model.Title</h4>
                <p>Organizer: @Model.Publisher</p>
            </div>
            <div>
                <button type="submit" class="btn btn-outline-danger">Yes, Delete</button>
                <a asp-action="All" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
