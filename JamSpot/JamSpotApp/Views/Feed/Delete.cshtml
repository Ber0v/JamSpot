@using JamSpotApp.Models.feed
@model DeleteViewModel
<link rel="stylesheet" href="~/css/Feed.css" asp-append-version="true" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="Feed-container">
        @if (Model != null)
        {
            <h2 class="mt-2">Are you sure you want to delete this post?</h2>

            <div>
                <h4>@Model.Title</h4>
                <p>Organizer: @Model.Publisher</p>

                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="@Model.Id" />
                    <button type="submit" class="btn btn-outline-danger">Yes, Delete</button>
                    <a asp-action="All" class="btn btn-outline-secondary">Cancel</a>
                </form>
            </div>
        }
        else
        {
            <h1 class="text-danger">post not found.</h1>
        }
    </div>
</div>