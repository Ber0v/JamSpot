@model List<JamSpotApp.Data.Models.Song>

<div>
    <h5>Your Songs</h5>
    @if (Model.Any())
    {
        @foreach (var song in Model)
        {
            <div class="mt-3">
                <p><strong>@song.Title</strong></p>
                <audio controls>
                    <source src="@Url.Action("GetSongFile", "Music", new { id = song.Id })" type="audio/mpeg">
                </audio>
            </div>
        }
    }
    else
    {
        <p class="text-muted">This user hasn't uploaded any songs yet.</p>
    }
</div>
